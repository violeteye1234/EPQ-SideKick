# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
max_line_length = 100
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*js]
indent_size = 2

[*.css]
indent_size = 2

[*.html]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
